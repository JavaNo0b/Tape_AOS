<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/profile1_icon_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/prof1_icon"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/profile1_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/profile1_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginBottom="23dp"
        app:layout_constraintBottom_toTopOf="@id/profile1_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/profile1_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임을 설정해보세요!"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="149dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/profile1_info_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/prof1_info"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toTopOf="@id/profile1_subtitle_tv"
        app:layout_constraintBottom_toBottomOf="@id/profile1_subtitle_tv"
        app:layout_constraintEnd_toStartOf="@id/profile1_subtitle_tv"/>

    <TextView
        android:id="@+id/profile1_subtitle_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임은 숫자 어쩌구 규칙..."
        android:textSize="13sp"
        android:textColor="#C4C4C4"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/profile1_title_tv"
        app:layout_constraintStart_toStartOf="@id/profile1_title_tv"
        app:layout_constraintEnd_toEndOf="@id/profile1_title_tv"/>

    <EditText
        android:id="@+id/profile1_nickname_et"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/text_edit_round"
        android:hint="닉네임"
        android:textColorHint="#C4C4C4"
        android:gravity="top"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@id/profile1_subtitle_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>