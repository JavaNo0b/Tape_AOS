<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="63dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_marginTop="11dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    >


    <androidx.cardview.widget.CardView
        android:id="@+id/item_notif_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="11dp"
        app:cardElevation="0dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_notif_1_image_iv"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:src="@drawable/albumcover_5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="14dp"
            android:layout_marginStart="12dp"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/item_notif_1_text_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="music_play 님이 회원님의 테이프에 댓글을 작성했습니다."
                android:textColor="@color/black"
                android:textSize="9sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="19dp"
                android:layout_marginStart="45dp"/>


            <TextView
                android:id="@+id/item_notif_1_text_more_tv"
                android:layout_width="match_parent"
                android:layout_height="11dp"
                android:text="안녕하세요! 저도 이 노래 진짜 좋아했었는데 테이프에 올리셔서 반가워요!"
                android:textColor="#B0B0B0"
                android:textSize="7sp"
                android:singleLine="true"
                android:ellipsize="end"
                app:layout_constraintTop_toBottomOf="@id/item_notif_1_text_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="38dp"
                android:layout_marginStart="45dp"
                android:layout_marginTop="5dp"
                />

            <ImageView
                android:id="@+id/item_notif_1_dot_iv"
                android:src="@drawable/item_notif_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="10dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>