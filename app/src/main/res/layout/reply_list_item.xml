<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/user_profile_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/album_3"
         />

    <TextView
        android:id="@+id/user_profile_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/user_profile_iv"
        app:layout_constraintStart_toEndOf="@id/user_profile_iv"
        android:layout_marginStart="6dp"
        android:text="Min_SEO!"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAlignment="center"/>
    <ImageView
        android:id="@+id/mark_writer_iv"
        android:layout_width="38dp"
        android:layout_height="17dp"
        android:src="@drawable/rectangle_34624813"
        app:layout_constraintStart_toEndOf="@id/user_profile_tv"
        app:layout_constraintTop_toTopOf="@id/user_profile_tv"
        android:layout_marginStart="4dp"/>
    <TextView
        android:id="@+id/mark_writer_tv"
        android:layout_width="38dp"
        android:layout_height="17dp"
        android:textColor="#FF5E5E"
        android:text="작성자"
        android:textSize="9sp"
        app:layout_constraintTop_toTopOf="@id/mark_writer_iv"
        app:layout_constraintStart_toStartOf="@id/mark_writer_iv"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="1dp"/>


    <ImageView
        android:id="@+id/reply_edit_btn"
        android:layout_width="2dp"
        android:layout_height="12dp"
        android:scaleType="fitXY"
        android:src="@drawable/group_390"
        app:layout_constraintEnd_toEndOf="@id/reply_background_iv"
        app:layout_constraintTop_toTopOf="@id/user_profile_tv"
        android:layout_marginTop="2dp"/>




    <ImageView
        android:id="@+id/reply_background_iv"
        android:layout_width="328dp"
        android:layout_height="70dp"
        android:src="@drawable/rectangle_34624795"
        android:scaleType="fitXY"
        app:layout_constraintStart_toEndOf="@id/user_profile_iv"
        app:layout_constraintTop_toBottomOf="@id/user_profile_tv"
        android:layout_marginTop="6dp"
        android:layout_marginStart="6dp"/>

    <TextView
        android:id="@+id/reply_text_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/reply_background_iv"
        app:layout_constraintTop_toTopOf="@id/reply_background_iv"
        android:layout_marginTop="2dp"
        android:paddingTop="3dp"
        android:paddingLeft="3dp"
        android:text="겨울에 듣기 좋은 노래.."
        android:textSize="12sp"
        android:textColor="@color/black"
        />

</androidx.constraintlayout.widget.ConstraintLayout>