<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/user_profile_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="3dp"
        android:src="@drawable/white_radius" />
    <TextView
        android:id="@+id/user_profile_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/user_profile_iv"
        app:layout_constraintStart_toEndOf="@id/user_profile_iv"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="3dp"
        android:text="Min_SEO!"
        android:textAlignment="center"/>
    <ImageView
        android:id="@+id/reply_delete_btn"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_bin_8979965"
        app:layout_constraintEnd_toEndOf="@id/reply_background_iv"
        app:layout_constraintTop_toTopOf="@id/user_profile_tv"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="2dp"/>
    <ImageView
        android:id="@+id/reply_edit_btn"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_edit_1159633"
        app:layout_constraintEnd_toEndOf="@id/reply_background_iv"
        app:layout_constraintTop_toTopOf="@id/user_profile_tv"
        android:layout_marginEnd="9dp"
        android:layout_marginTop="2dp"/>




    <ImageView
        android:id="@+id/reply_background_iv"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:src="@drawable/rectangle_34624795"
        android:scaleType="fitXY"
        app:layout_constraintStart_toEndOf="@id/user_profile_iv"
        app:layout_constraintTop_toBottomOf="@id/user_profile_tv"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="3dp"/>

    <TextView
        android:id="@+id/reply_text_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/reply_background_iv"
        app:layout_constraintTop_toTopOf="@id/reply_background_iv"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:paddingTop="3dp"
        android:paddingLeft="3dp"
        android:text="겨울에 듣기 좋은 노래.."
        android:textSize="14sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>